#templateFooterElement{ display:none; }
.footerElement{
    position:relative;
    display:block;
    width:95%;
    margin:0px!important;
    margin-left:35px!important;
    margin-bottom:10px!important;
    padding:5px;!important;
    background-color: rgba(109, 166, 222, 0.23);
    border-radius:5px;
    border: 1px solid rgba(149, 181, 214, 0.52);
}
.footerExplenation{ position:initial; top:3px; font-size:11px; font-weight:bold;color: rgba(0, 98, 195, 0.49);}
#feLink{ left: 20px;} #feText{ right: 5%;}
.footerRemove:hover{ opacity: .8;}
.footerRemove{
    position:absolute;
    right:5px; top:3px;
    font-weight:bold;
    background-color: #D21919;
    padding: 1px 10px;
    color:white;
    border-radius:9px;
    opacity:.5;
    cursor:hand;
    cursor:pointer;
}
.footerElement select, .footerElement input[type=text]{
    width:90%;
    padding:2px;
    font:inherit;
    font-size:13px;
    margin-top:3px;
    background-color: aliceblue;
    border: 1px solid rgba(59, 144, 228, 0.44);
}
