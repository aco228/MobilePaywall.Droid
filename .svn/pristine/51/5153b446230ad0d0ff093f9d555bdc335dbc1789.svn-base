#controlLoadMore{
  cursor:hand; cursor:pointer;
  width:80%; margin-left:10%;
  height:initial;
  padding:5px
}

.portfolioTwoItemImageWrapper{
  position:relative;
}
.videoPlayButton{
  position:absolute; top:0px; left:0px; width:100%; height:100%;
  background-image:url('../../Images/Black/Play.png');
  background-size:40px; 
  background-position:center;
  background-repeat:no-repeat;
  z-index:10;
}


.notifications{
  text-align:center;
  text-shadow: 1px 1px 0px rgba(255, 255, 255, 0.23);
}
.notifications-top{
  background-color: #AFAFAF;
  padding:10px;
  color: #272727;
}
.notifications-bottom{
  background-color:rgba(255,255,255,.2);
  padding:10px;
  border-radius:10px;
  color: #D4D4D4;
  margin-bottom:10px;
}
.notifications h3{
  margin:0px; padding:0px; font-size:13px; line-height:initial; color:inherit;
}