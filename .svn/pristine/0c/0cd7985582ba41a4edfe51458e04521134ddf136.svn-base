body {
  margin:0px; padding:0px!important;

  background-image:url(../../Images/QuizContent/pattern.jpg);
  margin:0px!important;
  color: #DADADA!important;
  /*font-family: 'Ubuntu Condensed', sans-serif!important;*/
  font-family: 'Roboto', sans-serif!important;
}
/*#wrapper{
  width:100%;
  min-height:100%;
  position:relative;
}*/

/*
  ======================================================
  CONSTANTS

*/
.header{
  color:#00c0ff;
  font-size:20px;
  padding-top:3px; padding-bottom:3px;
  margin-top:15px; margin-bottom:15px;
  text-transform:uppercase;
  border-bottom: 5px solid rgb(23,23,23);
  font-weight:bold;
}
.header1{ font-size:17px; border:none; }

a{
  color:inherit!important;
  font:inherit!important;
  text-decoration:inherit;
}

.btn:hover{color:inherit!important;}

/*
  ======================================================
  CONTENT

*/

#page_content{
  padding:10px;
  padding-top:0px;
  overflow:hidden;
}

.aditionalText{
  margin:0px;
  padding: 7px 10px;
  font-size:14px; 
  text-align:center;
  color:#0a3260;
  background-color:#00c0ff;
  font-weight: bold;
  border-bottom: 1px solid rgba(239, 239, 239, 0.56);
}
.btn{
  background: linear-gradient(rgb(250,0,46), rgb(249,0,37));
  background-color:rgb(250,0,46);
  border:none;
  padding:10px 30px;
  color:#FFF;
  font:inherit;
  font-size:14px;
  cursor:hand; cursor:pointer;
  text-shadow:1px 1px 1px rgba(0,0,0,.5);
  border-radius:3px;
}

input[type=submit], .submitBtn{
  text-align:center;
  background: linear-gradient(rgb(250,0,46), rgb(249,0,37));
  background-color:rgb(250,0,46);
  font:inherit;
  color:#FFF;
  width:100%;
  margin-top:15px;
  padding:13px 0px;
  border-radius:5px;
  border:none;
  text-transform:uppercase;
  font-weight:bold;
  cursor:hand; cursor:pointer;
}

/* quiz */
#quizQuestionData, #quizQuestionDataOLD { transition:all .4s; }
#quizQuestionWait { transition:all .4s; }
#quiz_finalTranslation{
  text-align:center;
  font-size: 25px;
}
.quiz_translation_percent, .quiz_translation_timer{ 
  background-color: #222222;
  padding: 3px 8px;
  border-radius: 5px;
}
#quiz_finalTranslation_sub{
  text-align:center;
  background-color: #00000030;
  padding: 5px;
}

.quizAnswer{
  transition: all .5s;
    padding: 5px;
    margin: 0;
    cursor: hand;
    cursor: pointer;
        color: white;
    background-color: rgba(10, 50, 96, 0.56);
    font-size: 20px;
    text-align: center;
    vertical-align: middle;
    display: table-cell;
}

.quizSubmitNotActive{ pointer-event:none; opacity:.2; }

.quizAnswerClicked{background-color: #adadad; color:black; }
/*.quizAnswerCorect{background-color: #1d651d;}
.quizAnswerWrong{background-color: #883939;}*/

.quizIcon{
  background-image: url('../../Images/QuizContent/icon.png');
    margin: 0 auto;
    background-size: contain;
    background-repeat: no-repeat;
    background-position: center;
}

.quizResults{
    width: 75%;
    margin: 0 auto;
    background-color: #00c0ff;
    border: 1px solid rgba(0, 0, 0, 0.37);
    border-radius: 5px;
    color:white;
    font-family: 'Dosis', sans-serif;
}

.resultMessage {
    text-align: center;
    font-size: 20px;
    letter-spacing: 3px;
    padding: 25px;
    font-weight: bold;
    border-bottom: 1px solid white;
}

.resultText {
    color: black;
    text-align: center;
    font-size: 17px;
    font-weight: bold;
    padding: 25px;
    padding-bottom: 10px;
}

.resultScored {
    text-align: center;
    font-size: 100px;
    padding-bottom: 25px;
    line-height: 100px;
}

.resultDescription {
    padding: 25px;
    color: black;
    text-align: center;
    font-weight: bold;
}

.resultTitle {
    text-align: center;
    font-size: 35px;
    border-bottom: 1px solid white;
    padding-bottom: 25px;
}

a.btnAnother {
    display: block;
    background-color: rgba(0, 192, 255, 0.65);
    font-size: 16px!important;
    padding: 16px;
    margin: 0 auto;
    color: white!important;
    text-transform: uppercase;
    width: 250px;
    text-align: center;
    margin-top: 25px;
    margin-bottom: 80px;
}

a.btnAnother:hover{
  text-decoration: none;
}