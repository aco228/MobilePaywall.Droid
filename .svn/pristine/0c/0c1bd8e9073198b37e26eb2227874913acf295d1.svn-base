@{
  Layout = "~/Views/Template/_Layout/_Login.cshtml";
}

<div class="login_page_wrapper">
  <div class="md-card" id="login_card">
    <div class="md-card-content large-padding" id="login_form">
      <div class="login_heading">
        <div class="user_avatar"></div>
      </div>
      <div class="uk-form-row">
        <label for="login_username">Username</label>
        <input class="md-input md-input-filled" type="text" id="login_username" name="login_username" value="@ViewBag.Username" />
      </div>
      <div class="uk-form-row">
        <label for="login_username">Password</label>
        <input class="md-input md-input-filled" type="password" id="login_password" name="login_username" />
      </div>
      <div class="uk-margin-medium-top">
        <button class="md-btn md-btn-primary md-btn-block md-btn-large" id="loginBtn" inuse="false">Sign In</button>
      </div>
    </div>
  </div>
</div>