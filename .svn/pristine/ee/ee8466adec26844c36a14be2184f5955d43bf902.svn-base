#_tpay_loader {
    position:fixed;
    width:100%;
    height:100%;
    top:0px;
    left:0px;
    z-index:99999;
    background: linear-gradient(to bottom, rgba(255, 255, 255, 0.71), rgba(204, 204, 204, 0.72));
}
#_tpay_loader_text {
    width:95%;
    text-align:center;
    margin-left:2.5%;
    margin-top: 100px;
    padding:10px;
    box-shadow:0px 0px 30px rgba(255,255,255,1);
    background-color:white;
    color:black;
    text-shadow:1px 1px 1px rgba(0,0,0,.2);
}
