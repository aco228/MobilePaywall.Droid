/*
  ======================================================
  CONSTANTS

*/
.pfooter_link{ margin-right: 50px;
}
.header{
      color: #8ab198;
    font-size: 25px;
    padding-bottom: 15px;
  padding-top:3px; padding-bottom:3px;
  margin-top:15px; margin-bottom:15px;
  text-transform:uppercase;
  border-bottom: 5px solid rgb(23,23,23);
  font-weight:bold;
}
.header1{ font-size:17px; border:none; }

a{
  color:inherit!important;
  font:inherit!important;
  text-decoration:inherit;
}

.btn:hover{color:inherit!important;}

/*
  ======================================================
  CONTENT

*/

#page_content{
  padding:10px;
  padding-top:0px;
  overflow:hidden;
}

.aditionalText{
  margin:0px;
  background-color:rgba(0,0,0,.2);
  padding: 7px 10px;
  margin-top:15px;
  font-size:14px; 
  text-align:center;
}
.btn{
  background: linear-gradient(rgb(250,0,46), rgb(249,0,37));
  background-color:rgb(250,0,46);
  border:none;
  padding:10px 30px;
  color:#FFF;
  font:inherit;
  font-size:14px;
  cursor:hand; cursor:pointer;
  text-shadow:1px 1px 1px rgba(0,0,0,.5);
  border-radius:3px;
}

input[type=submit], .submitBtn{
  text-align:center;
  background: linear-gradient(rgb(250,0,46), rgb(249,0,37));
  background-color:rgb(250,0,46);
  font:inherit;
  color:#FFF;
  width:100%;
  margin-top:15px;
  padding:13px 0px;
  border-radius:5px;
  border:none;
  text-transform:uppercase;
  font-weight:bold;
  cursor:hand; cursor:pointer;
}

/* quiz */
#quizQuestionData, #quizQuestionDataOLD { transition:all .4s; }
#quizQuestionWait { transition:all .4s; }
.quizAnswer{
  transition:all .5s;
  padding:5px;
  background-color: black;
  margin:5px;
  cursor:hand;
  cursor: pointer;
}
.quizSubmitNotActive{ pointer-event:none; opacity:.2; }

.quizAnswerClicked{background-color: #adadad; color:black; }
