				string.Format("{0} - {1}", this.Request.Url.ToString(), 
				this.Request.UserHostAddress));
      if (Log.IsErrorEnabled)
        Log.Error(builder, lastExceptionWhichWasNotHandled);

      // TODO: testing! return afterwards
			//this.Response.Redirect("/error");
		}

