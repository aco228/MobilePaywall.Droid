.master{ display:none; }

#notes_container {
}


.provider_note {
    font-size:14px!imporant;
    background-color: #E1E0E4;
    padding:3px;
    margin-top:2px;
    border: 1px solid rgba(69, 90, 100, 0.3);
    overflow:hidden;
}
.provider_note_closed{ height:32px; }
.pn_header {
    position:relative;

}
.pn_title {
    width:99%;
    margin-left:1%;
    background-color: rgba(255, 255, 255, 0.66);
    padding:3px 15px;
    text-shadow:1px 1px 0px #FFF;
    font-weight:bold;
    border:none;
    border-radius:5px;
    font-size:11.5px;
    font:inherit!imporant;
    color:rgba(0,0,0,.6);
    background: linear-gradient(to right, rgba(255, 255, 255, 0.78), rgba(255, 255, 255, 0));
}
.pn_btn:hover{ opacity:1; }
.pn_btn {
    position:absolute;
    top:4px;
    cursor:hand;
    cursor:pointer;
    font-weight:bold; font-size:11px;
    background-color: #F1D2C9;
    padding: 0px 7px;
    border-radius:5px;
    opacity:.4;
}
.pn_open {
    right:30px;
    background-color: #B0C7DE;
}
.pn_delete {
    right:5px;
}
.pn_body {
    padding:10px 10px;
}
.pn_body textarea{
    width:100%;
    max-width:99%;
    min-height:99%;
    background-color: rgb(255, 255, 255);
    border:none;
    border-radius:9px;
    font:inherit;
    font-size:12px;
    padding:10px 15px;
    text-shadow:1px 1px 0px #FFF;
    color:rgba(0,0,0,.7);
}


.provider_separator{
    height:5px; width:80%;
    background-color:black;
    margin:5px;
    background-color: #ECECEC;
    border: 1px solid rgba(69, 90, 100, 0.4);
    opacity:.5;
}