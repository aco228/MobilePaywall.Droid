input {
 outline:none;
 border:none;
}
a:link,a:hover,a:visited {
 text-decoration:none;
}
.inline {
 display:inline-block;
 *display:inline;
 *zoom:1;
 vertical-align:top;
}
img {
 max-width:480px;
 width:100%;
}
body {
 padding-bottom:30px;
}
input[type=checkbox] {
 width:70px;
 height:70px;
}
#formSubmit {
 width:460px;
 height:105px;
 margin-top:15px;
 cursor:pointer;
 max-width:96%;
 background-size:contain;
 background-position:center;
 background-repeat:no-repeat;
 margin:15px auto;
 display:block;
 background-color:transparent;
}
.buttonImage {
 max-width:460px;
 width:95%;
}
.headerImage,.previewImage,.buttonImage {
 margin:auto;
 display:block;
}
#mainForm {
 max-width:480px;
 margin:15px auto;
}
#termsText {
 font-size:16px;
 width:350px;
 margin-left:10px;
 cursor:pointer;
}
.termsWarning-wrapper {
 height:100%;
 width:100%;
 background-color:rgba(0,0,0,0.8);
 position:absolute;
 top:0;
 left:0;
 z-index:1000;
 display:none;
}
.termsWarning {
 font-size:23px;
 text-align:center;
 color:#fff;
 padding-top:50px;
}
.termsWarning-yes,.termsWarning-no {
 display:inline-block;
 padding:20px 35px;
 margin:25px 15px 0 15px;
 background-color:#4e4c4c;
 cursor:pointer;
}
.termsWarning-yes {
 background-color:#19bf19;
}
.termsWarning-text a:link,termsWarning-text a:visited {
 color:#fff;
 text-decoration:none;
}
#headerContent,#content,#mainWrapper,#player {
 width:480px;
}
#msisdnWrapper,#youtubePlayer,#vPlayer {
 width:460px;
 margin:auto;
 display:block;
}
#titleSpace {
 display:none!important;
}
#infobar {
 width:90%;
 padding:5px 5px 5px 5px;
 background-color:#5f5f5f;
 border-radius:12px;
 font-family:sans-serif;
 position:relative;
 font-size:0;
 margin:10px auto;
 margin-top:30px;
}
#ibWrapper {
 width:93%;
 padding:0;
 margin:auto;
 background-color:transparent;
 padding-top:33px;
}
#mesaLogo {
 width:51px;
 height:47px;
 background:url('/Images/_Specific/gr/mesa.png');
 display:block;
 margin:17px auto 9px auto;
 position:absolute;
 top:-22px;
 right:-7px;
 background-size:cover;
}
#barTitle {
 background:url("/Images/_Specific/gr/barTitle.png");
 width:229px;
 height:20px;
 top:0px!important;
 position:absolute;
 left:0px;
}
.ibInfo {
 margin:11px auto;
 padding:0;
 background-color:transparent;
}
.ibDesc {
 font-size:9px;
 font-weight:bold;
 color:#ededed;
 position:relative;
 margin-bottom:7px;
 text-align:left;
 display:inline-block;
 width:25%;
 vertical-align:middle;
}
.ibValue {
 padding:4px 6px;
 background-color:#f2f2f2;
 border-radius:6px;
 color:#303030;
 font-size:9px;
 font-weight:bold;
 vertical-align:middle;
 width:75%;
 box-sizing:border-box;
 display:inline-block;
}
#titleSpace {
 width:223px;
 display:inline-block;
}
#infobar a:link,#infobar a:visited {
 color:#303030;
 text-decoration:none;
}
@media only screen and (min-width: 0px) and (max-width: 455px) {
 #termsText {
  width:250px;
 }
}

