

.selectMobileOperator, .selectAutomationGroup{ 
    padding: 5px 30px;
    margin-bottom:15px;
}
#block_template{ display:none; }



/*
    Service
*/
.serviceElements{
    margin-left:50px;
}
.service{
    position:relative;
    width:30%;
    background-color: #DDDFEC;
    margin:5px;
    font-size:12px;
    box-shadow:0px 0px 15px rgba(0,0,0,0.5);
}

.serviceBody{
    padding:5px;
}
.serviceOrder{
    position:absolute;
    z-index:50;
    bottom:0px; left:0px;
    padding: 1px 10px;
    color:white; background-color:rgba(0,0,0,.6);
}
.serviceLogo{
    position:absolute;
    left:0px; height:100%; top:0px; width:150px;
    background-color:white;
    background-size:120px;
    background-repeat:no-repeat;
    background-position:center;

}
.serviceBodyBody{
    margin-left:110px;
}
.serviceInfo{
    background-color:rgba(255,255,255,.5);
    padding: 0px 5px; margin:2px;
}
.serviceSpan{background-color: rgba(255, 255, 0, 0.3);padding: 0px 5px;border-radius:5px;}
.serviceIsActive{
    position:absolute;
    right:0px; top:0px; width:30px; height:100%;
}
.serviceActive{ background-color:greenyellow;}
.serviceNoActive{ background-color:red; }

.serviceName{font-weight:bold;color: #18187B;}
.automationName{ font-weight:bold; color: blue; font-size:11px; }
.serviceComment{
    color:green;
}
