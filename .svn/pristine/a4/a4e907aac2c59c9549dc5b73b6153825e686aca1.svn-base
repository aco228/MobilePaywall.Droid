#controlLoadMore {
  width: 100%!important;
  background-color: #D26E4A;
  max-width:initial!important;
  font-weight:bold;
  text-transform:uppercase;
  margin-bottom:15px;
}

.__header, .__footer{
  text-align:center;
  padding:5px;
  margin-bottom:10px;
  margin-top:10px;
  font-weight:bold;
  text-shadow: 1px 1px 0px #E8E8E8;
}

.__footer{
	background-color: #fff;
	padding-left: 24px;
	padding-right: 24px;
	margin-left: 24px;
	margin-right: 24px;
	margin-bottom:0px;
	padding-bottom: 36px;
}

.imageHolder{ position:relative; }

.playBtn:hover{ opacity:1;}
.playBtn{
  position:absolute;
  top:0px; left:0px; width:100%; height:70%;
  background-image:url('../../Images/Black/Play.png');
  background-size:35px;
  z-index:1000;
  background-position:center;
  background-repeat:no-repeat;
  opacity:.8;
  transition:all .5s;
}

