#login_section{}
#password_section{
    margin-top:50px;
    margin-bottom:50px;
}

.form_section{
    font-weight:bold;
    font-size:13px;
}
.section_body{
    background-color:#FFF;
    padding:5%;
    border: 1px solid rgb(236, 236, 236);
}
.login_asterix{ color:rgb(255, 86, 172);}
.form_label{
    color: #2D2D2D;
    margin-bottom:10px;
    margin-top:5px;
}
.single_form_label{
    text-align:center;
    padding:10px;
}
.form_section input[type=text], .form_section input[type=password]{
    width:100%; max-width:100%;
    padding:20px 10px;
    font:inherit;
    color:gray;
    border: 1px solid rgb(218, 218, 218);
    border-radius:3px;
    background-color: #F2F2F2;
}

.ajax_response{
    color:#000;
}

.submitBtn{
    background-color:#f96354;
    color: white;
    padding:10px;
    cursor:hand; cursor:pointer;
    border-bottom:3px solid #000;
}