@model TemplateServiceUpdateLogoModel
@{
  Layout = "~/Views/Template/_Layout/_Layout.cshtml";
}

@if(File.Exists(Server.MapPath(string.Format("~/Images/_Logo/{0}.png", PaywallHttpContext.Current.Service.ServiceData.ID))))
{
  <label style="color:gray; margin:15px;">This service contains logo in project!</label> <br />
}

@if (!string.IsNullOrEmpty(Model.Message))
{

  <div class="md-card" id="serviceConfiguration">
    <div class="md-card-content">
      <h3 class="heading_a">Notification</h3>
        <strong>@Model.Message</strong>
    </div>
  </div>
}

<div class="md-card" id="serviceConfiguration">
  <div class="md-card-content">
    <h3 class="heading_a">Upload service logo</h3>

    <div class="uk-grid" data-uk-grid-margin="">
      <div>

        <form action="/template/ApiUpdateLogo" method="post" enctype="multipart/form-data">
          <input type="file" name="file" />
          <input type="submit" value="OK" class="md-btn md-btn-flat md-btn-flat-primary" style="margin-top:25px;">
        </form>

        @*@using (Html.BeginForm("ApiUpdateLogo", "Template", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
          <input type="file" name="file" />
          <input type="submit" value="OK" class="md-btn md-btn-flat md-btn-flat-primary" style="margin-top:25px;">
        }*@
      </div>
    </div>

  </div>
</div>

<script>

  document.addEventListener("DOMContentLoaded", function () {
  });

</script>