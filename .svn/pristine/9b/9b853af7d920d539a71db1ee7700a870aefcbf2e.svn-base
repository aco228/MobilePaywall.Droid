div.download a
{
  width: 90%;
  min-width: 70px;
  max-width: 375px;
  color: #FFFFFF;
  padding: 9px 5px;
  background: -moz-linear-gradient(top, #ffcc00 0%, #ffaa00);
  background: -webkit-gradient(linear, left top, left bottom, from(#ffcc00), to(#ffaa00));
  -moz-border-radius: 5px;
  -webkit-border-radius: 5px;
  border-radius: 5px;
  border: 1px solid #000000;
  -moz-box-shadow: 1px 1px 2px rgba(000,000,000,0.5), inset 0px 1px 0px rgba(255,255,255,0.9);
  -webkit-box-shadow: 1px 1px 2px rgba(000,000,000,0.5), inset 0px 1px 0px rgba(255,255,255,0.9);
  box-shadow: 1px 1px 2px rgba(000,000,000,0.5), inset 0px 1px 0px rgba(255,255,255,0.9);
  -webkit-text-shadow: 1px 0px 1px rgba(000,000,000,0.3), 1px 1px 0px rgba(255,255,255,0);
  text-shadow: 1px 0px 1px rgba(000,000,000,0.3), 1px 1px 0px rgba(255,255,255,0);
  text-align: center;
  font-size: 1.6rem;
}

  div.download a span
  {
    color: #FFFFFF;
    font-weight: 900;
    -webkit-text-shadow: 2px 2px 2px #000000;
    text-shadow: 2px 2px 2px #000000;
    filter: dropshadow(color=#000000, offx=1, offy=1);
  }