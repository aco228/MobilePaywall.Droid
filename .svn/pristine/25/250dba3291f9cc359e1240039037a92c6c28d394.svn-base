.avs_text{
  font-size:18px;
}

.btnYes, .btnNo{
  width:48%;
  margin:30px 0px;
  padding:15px;
  box-shadow:0px 0px 10px rgba(0,0,0,.2);
  border-radius:5px;
  font:inherit;
  font-weight:bold;
  height:100px;
}

.btnYes{
  float:left; 
  border: 1px solid rgb(61, 152, 0);
  background:linear-gradient(rgb(84,190,1), rgb(68, 168, 1));
  background-color:rgb(84,190,1);
}
.btnNo{ 
  float:right;
  border: 1px solid rgb(190, 0, 16);
  background:linear-gradient(rgb(238,4,24), rgb(232,3,19));
  background-color:rgb(238,4,24);
}

button.btnNo.btn {}

