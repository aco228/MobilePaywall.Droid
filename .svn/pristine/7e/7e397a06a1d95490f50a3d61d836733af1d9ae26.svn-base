/*
    COMPATIBILITY BOX
*/
.compatibilityPopup {
    cursor:initial;
    background-color:#FFF;
    width:75%; margin-left:10%; padding:2.5%;
    border-radius:9px;
    box-shadow:0px 0px 20px #000;
    font-size:14px; font-weight:bold;
    z-index:5;
    color:#000;
    overflow:visible!important;
}
.compatibilityPopupHead {
    border-bottom:1px solid grey;
    height:40px;
}
.compatibilityPopupLogo {
    position:relative;
    float:left; width:50%;
    height:100%;
}
.compatibilityPopupLogoImg{
    background-image:url('../../../Images/popup/mon_mobile_est_il_compatible.png');
    width:95%;
    height:80%; 
    background-color:#000;
    background-size:contain; background-repeat:no-repeat; background-position:center;
    border-radius:9px;

}
.compatibilityPopupText {
    float:left; width:50%;
    line-height:30px;
}

.compatibilityPopupBody {
    position:relative;
}
.compatibilityPopupBodySection {
    margin-top:10px
}
.compatibilityPopupLabel {
    text-decoration:underline;
}
.compatibilityPopupSelect {
    margin-top:10px;
    cursor:hand; cursor:pointer;
    font-size:13px; font-weight:normal;
    border:1px solid grey;
    height:15px; padding:1px 5px;;
    background-image:url('../../../Images/popup/option.jpg');
    background-position:right; background-repeat:no-repeat;

}

.compatibilityPopupSuccess {
    display:none;
    position:absolute;
    width:100%; height:100%; top:0px; left:0px;
    background-color:rgba(255,255,255,.5);
}
.compatibilityPopupSuccessBox {
    background-color:#E2E2E2;
    border:3px solid #34BC4E;
    border-radius:5px;
    padding:10px 5px;
    height:40px;
    box-shadow:0px 0px 15px #34BC4E;
}
.compatibilityPopupSuccessImg {
    float:left; width:30%; height:100%;
    background-image:url('../../../Images/popup/compatible.jpg');
    background-repeat:no-repeat;
    background-position:center;
    background-size:contain;
}
.compatibilityPopupSuccessImgSucc{background-image:url('../../../Images/popup/compatible.jpg');}
.compatibilityPopupSuccessImgFail{background-image:url('../../../Images/popup/uncompatibile.png');}
.compatibilityPopupSuccessText{
    float:left; width:70%; height:100%;
}

.compatibilityPopupOptions {
    display:none;
    position:fixed; top:2.5%; left:2.5%;
    width:95%; height:95%;
    background-color:rgba(255,255,255,.95);
    overflow:auto;
    font-weight:normal;
    border-radius:9px;
}
.compatibilityPopupOptions_option {
    padding:10px; 
    cursor:hand; cursor:pointer;
    border-bottom:1px solid #E2E2E2;
}
.compatibilityPopupOptions_option:hover{background-color:rgba(255,255,255,1);}