body {
  margin:0px!important; padding:0px!important;
  background-color:#FFF!important;
  margin:0px!important;
  font-family: 'Ubuntu Condensed', sans-serif!important;
  background-color: rgb(251, 251, 251)!important;
}
/*#wrapper{
  width:100%;
  min-height:100%;
  position:relative;
}*/

/*
  ======================================================
  CONSTANTS

*/
.header{
  background-color: rgb(247, 3, 146);
  color:#FFF;
  font-size:23;
  margin-top:15px; margin-bottom:15px;
  text-transform:uppercase;
}
.header1{ font-size:10px; border:none; }
.header_text{
  color:rgb(247, 3, 146);
  padding:10px;
  background-color:#FFF;
  display:inline;
}

a{
  color:inherit!important;
  text-decoration:inherit!important;
}

a:hover, button:hover{
  color:inherit!important;
  background-color:inherit!important;
}

.row{
  margin-left:0px!important;
  margin-right:0px!important;
}
.btn:hover{color:inherit!important;}

/*
  ======================================================
  CONTENT

*/

#page_content{
  padding:0px 10px;
}

.aditionalText{
  margin:10px;
  margin-top:15px;
  font-size:14px; 
  text-align:center;
}

.btn{
  font:inherit;
  background-color:rgb(247, 3, 146);

  border: 1px solid rgb(255, 71, 165);
  padding:10px 30px;
  color:#FFF;
  cursor:hand; cursor:pointer;
  text-shadow:1px 1px 1px rgba(0,0,0,.5);
  border-radius:3px;
}

input[type=submit], .submitBtn{
  text-align:center;
  font:inherit;
  background-color:rgb(247, 3, 146);
  color:#FFF;
  width:100%;
  margin-top:15px;
  padding:13px 0px;
  border-radius:5px;
  border:none;
  background: linear-gradient(rgb(255, 74, 180), rgb(247, 3, 146));
  text-transform:uppercase;
  font-weight:bold;
  border:1px solid rgb(255,89,172);
  cursor:hand; cursor:pointer;
}