jQuery(document).ready(function () {
  ComponentsEditors.init();
  refresh();
  
  $('#timeline .tooltips').tooltip();
});

$('.reload').click(function () {
  resetEditor();
  unblock();
});

$('#select_service').select2({
  placeholder: "Service",
  allowClear: true,
});

$('#select_timeline_type').select2({
  placeholder: "Type",
  allowClear: true,
});

$('#reset_btn').on('click', function () {
  resetFilters();
});

$('#filter_service').select2({
  placeholder: "Service",
  allowClear: true
});

$('#filter_timeline_type').select2({
  placeholder: "Type",
  allowClear: true,
});

function resetEditor() {
  $('#new_entry_form iframe').contents().find('body.wysihtml5.form-control.wysihtml5-editor').empty();
  $('#new_entry_form select.select2').select2('val', '');
}

function block() {
  Metronic.blockUI({
    animate: true
  });
}

function unblock() {
  Metronic.unblockUI();
}

function refresh(data) {
  //resetEditor();
  //data = JSON.parse(data);

  if (typeof data !== 'undefined')
    data = JSON.parse(data);

  if (data != undefined && data.status != 'ok') {
    errorNotification(data.text);
  }
  else {
    block();
    $("#refresh_btn").submit();
    resetEditor();
    unblock();
  }
}

function resetFilters() {
  $('.filters select.select2').select2('val', '');
}

function errorNotification(error) {
  toastr["error"](error, 'Error');

  toastr.options = {
    showDuration: 100,
    hideDuration: 1000,
    timeOut: 5000,
    extendedTimeOut: 1000,
    showEasing: 'swing',
    hideEasing: 'linear',
    showMethod: 'fadeIn',
    hideMethod: 'fadeOut',
    closeButton: true,
    positionClass: 'toast-top-right',
    onclick: null
  };
}