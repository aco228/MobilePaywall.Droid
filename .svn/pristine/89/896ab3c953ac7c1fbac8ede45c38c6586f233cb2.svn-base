.playBtn:hover {
  opacity: .7;
}

.playBtn {
  position: absolute;
  height: 100%;
  width: 100%;
  top: 0px;
  left: 0px;
  background-image: url('../../Images/Black/Play.png');
  background-size: 40px;
  background-position: center;
  background-repeat: no-repeat;
  z-index: 100;
  opacity: .7;
  transition: all .5s;
}

.backgroundImage {
  width: 100%;
}

#controlLoadMore {
  width: 100%;
  margin-bottom: 10px;
}

#footer_aditionalInfo {
  font-size: 13px !important;
  text-align:center;
}
