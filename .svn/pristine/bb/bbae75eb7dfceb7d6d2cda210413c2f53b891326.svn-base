/*
  Supported Devices
*/

#supportedPhones{
  background-color:#FFF;
  width:100%;
  text-align:center;
  color: #3A3A3A;
}
#supportedPhones td:first-child{ width:20%; font-weight:bold; }
#supportedPhones tr td { background-color:rgba(0,0,0,0)!important; }
.td_false{ background-color: rgba(255, 0, 0, 0.18); }
.td_true{ background-color: rgba(0, 128, 0, 0.26); }

/*
  Html5Application page
*/
#iframeApplication{ width:100%;}

#header {
  position:relative;
  background-color:gray;
  background: linear-gradient(#D4D4D4, darkgrey);
  color:white;
  padding: 15px 5px;
}
#header2 h1, #header2 h2{ margin:0px; }
#header2{
  background-color:darkgray; padding:15px 5px; 
  text-align:center; color:rgba(255,255,255,.9);
  text-shadow:1px 1px 1px rgba(0,0,0,.3);
}
#header2 h1{ font-size:20px; font-weight:bold;}
#header2 h2{ font-size:15px; margin-top:5px; }
#baskButton {
  background-color:white;
  display:inline-block; padding: 3px 13px;
}
#logo {
  position:absolute; width:100%; height:100%; top:0px; left:0px; z-index:50px;
  background-size:100px; background-position:center; background-repeat:no-repeat;
  background-image: url('/lg/15.png');
  pointer-events:none;
}
#iframe {
  width:100%; min-height:100%;
  border:0px!important;
}


