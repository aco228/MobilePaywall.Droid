<hgroup class="hgroup-custom">
  <h1>@ViewBag.MessageHeader</h1>
  <h2>@ViewBag.MessageText</h2>
</hgroup>
<div class="actions">
  @if (ViewBag.BtnName1 != null && ViewBag.BtnHref1 != null)
  {
    <a href="@ViewBag.BtnHref1" class="btn green">@ViewBag.BtnName1</a>
  }
  @if (ViewBag.BtnName2 != null && ViewBag.BtnHref2 != null)
  {
    <a href="@ViewBag.BtnHref2" class="btn blue">@ViewBag.BtnName2</a>
  }
</div>