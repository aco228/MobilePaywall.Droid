div.optin
{
  margin: 20px 0 20px;
  width: 100%;
  text-align: center;
}

  div.optin a.optinbtn
  {
    width: 100%;
    min-width: 70px;
    max-width: 375px;
    color: #FFFFFF;
    padding: 9px 50px;
    -webkit-text-shadow: 1px 0px 1px rgba(000,000,000,0.3), 1px 1px 0px rgba(255,255,255,0);
    text-shadow: 1px 0px 1px rgba(000,000,000,0.3), 1px 1px 0px rgba(255,255,255,0);
    text-align: center;
    font-size: 1.6rem;
    font-family: Arial, Helvetica, sans-serif;
    background-image: -webkit-linear-gradient(bottom, #33b500, #0bec00 91%);
    background-image: -moz-linear-gradient(bottom, #33b500, #0bec00 91%);
    background-image: -o-linear-gradient(bottom, #33b500, #0bec00 91%);
    background-image: -ms-linear-gradient(bottom, #33b500, #0bec00 91%);
    background-image: linear-gradient(to top, #33b500, #0bec00 91%);
    -webkit-border-radius: 1px/1px;
	  -moz-border-radius: 1px/1px;
	  border-radius: 1px/1px;
	  background-color: #272a28;
	  -webkit-box-shadow: 0 0 0 5px #d5d5d5, inset 0 2px rgba(255,255,255,0);
	  -moz-box-shadow: 0 0 0 5px #d5d5d5, inset 0 2px rgba(255,255,255,0);
	  box-shadow: 0 0 0 5px #d5d5d5, inset 0 2px rgba(255,255,255,0);
  }

    div.optin a.optinbtn span
    {
      color: #FFFFFF;
      font-weight: bold;
      -webkit-text-shadow: 1px 1px 2px #000000;
      text-shadow: 1px 1px 2px #000000;
      filter: dropshadow(color=#000000, offx=1, offy=1);
    }

  div.optin a.optinbtnnew
  {
    width: 100%;
    min-width: 70px;
    max-width: 375px;
    color: #FFFFFF;
    padding: 20px 50px;
    text-align: center;
    font-size: 1.6rem;
    font-family: Arial, Helvetica, sans-serif;-webkit-border-radius: 8px/8px;
	  -moz-border-radius: 8px/8px;
	  border-radius: 8px/8px;
	  background-color: #18ff00;
	  -webkit-box-shadow: 0 0 7px rgba(16,18,21,.75);
	  -moz-box-shadow: 0 0 7px rgba(16,18,21,.75);
	  box-shadow: 0 0 7px rgba(16,18,21,.75);
	  background-image: -webkit-linear-gradient(bottom, #29c000, #00ff30);
	  background-image: -moz-linear-gradient(bottom, #29c000, #00ff30);
	  background-image: -o-linear-gradient(bottom, #29c000, #00ff30);
	  background-image: linear-gradient(to top, #29c000, #00ff30);
  }

  div.optin a.optinbtnnew span
    {
      color: #FFFFFF;
      font-weight: bold;
      -webkit-text-shadow: 1px 1px 2px #000000;
      text-shadow: 1px 1px 2px #000000;
      filter: dropshadow(color=#000000, offx=1, offy=1);
    }

div.spainconfirmation
{
  width: 100%;
}

  div.spainconfirmation img
  {
    height: 100%;
    width: inherit;
  }

div.infoes 
{
  color: #FFFFFF;
}

div.infoes .center {
  text-align:center;
}

div.infoes strong {
  font-size: 1.4rem;
  font-weight: 700;
}

a.cancel 
{
  color: #FFFFFF !important;
  text-decoration: underline !important;
}
