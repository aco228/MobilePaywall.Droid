#stream{}
#video_stream{
    width:100%;
}

#download_table{
    padding:15px 0px;
    color:#4A686A;
    width:100%;
}

#download_table td{
    text-align:center;
    width:50%;
}


#download_options{}
.download_option{
    clear:both;
    background-color: rgba(255, 255, 255, 1);
    padding:15px 0px;
    margin-bottom:5px;
    color:#000;
}
.download_title{
    font-weight:bold;
    text-align:center;
    line-height:25px;
    font-size:13px;
    width:60%; float:left;
}
.download_button{
    background-color:rgb(250,0,46);
    padding:8px 25px;
    font-weight:bold;
    border:none;
    text-shadow:0px 0px 3px rgba(255,255,255,.2);
    text-transform:uppercase;
    font-size:12px;
}

.videoStreamTitle{
      margin-top: 0px;
    padding: 10px;
    color: black;
    font-weight: bold;
    font-size: 30px;
}

.videoInfoAndDownload{
  background-color:white;
  border-bottom-left-radius:5px;
  border-bottom-right-radius:5px;
  border-bottom: 1px solid black;
}

.downloadButton{
      width: 90%;
    margin: 0 auto;
    border-radius: 5px;
}
