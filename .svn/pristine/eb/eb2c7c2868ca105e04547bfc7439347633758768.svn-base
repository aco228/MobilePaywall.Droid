/* MODALS */
.modal_wrapper {
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0px;
  left: 0px;
  padding-top: 150px;
  z-index: 500;
  background-color: rgba(0,0,0,.5);
}

  .modal_wrapper .modal {
    position: relative;
    top: auto;
    bottom: auto;
    right: auto;
    left: auto;
    display: block;
    z-index: 1;
  }

  .modal_wrapper .modal {
    background: transparent !important;
  }
