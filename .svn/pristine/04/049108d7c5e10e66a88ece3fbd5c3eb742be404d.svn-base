/*
	========================================================================================
	VIDEO SHORTCUT HOLDER
*/

.videoShortcutHolder{
	top:0px; left:0px;
	width: 100%; height: 100%;
	position:fixed;
	z-index:5000;

	transition:all 1s;
}
.videoShortcutHolderBack{
	width: 100%; height: 100%;

	background-color: rgba(0,0,0,.4);
	background: linear-gradient(135deg,#FFFFFF,#935500);
	opacity: .3;
	cursor: hand; cursor: pointer;	
}


/*
	=======================================================================================
	VIDEO SHORTCUT CARD
*/

.videoShortcut{
	top:0px; left:0px;
	position:absolute;
	z-index:4000;

	width:90%; margin-left:2%;
	height:250px;
	background-color:#FFF;
	border-radius: 15px;
	box-shadow: 0px 0px 50px rgba(117, 117, 117, 0.5);
	padding:2%;
	overflow:hidden;
	border: 1px solid rgba(0, 0, 0, 0.51);

	/*transition:all 2s;*/
}
.videoShortcutIn{
	width:100%; height:100%;
}

.videoShortcutHeader{
	height:60%; width:100%;
	position:relative;
}
	.videoShortcutBtnClose{
		position:absolute;
		top:15px; right:15px;
		cursor:hand; cursor: pointer;
		font-weight:bold;
		background-color:rgba(255,255,255,.5);
		text-shadow:1px 1px rgba(255,255,255,.5);
		padding:5px 15px;
		border-radius:9px;
		box-shadow:1px 1px 1px rgba(0,0,0,.5);
		z-index: 1000;
	}
	
	.videoShortcutHeaderTitle{
		position:absolute;
		bottom:15px;
		text-shadow:2px 2px 1px #000;
		font-size:20px;
		font-weight:bold;
		color: #DEDEDE;
	}

.videoShortcutBtn{
	width:31%; 
	cursor:hand; cursor:pointer;
	font-size:15px;

	background-image: -webkit-gradient(linear,center bottom,center top, from(#2D9C02), to(rgba(22, 188, 13, 0.45)));
	height:100px; line-height:145px; margin-right:2%;
	text-align:center;
	color:#FFF!important; font-weight:bold;
	float:left;

	border-radius:5px;
	box-shadow:0px 0px 15px rgba(0,0,0,.4);
	text-shadow:2px 2px 1px rgba(0,0,0,.5);
}

.videoShortcutOver{
	position:absolute;
	top:0px; left:0px;
	width: 100%; height:100%;
	opacity: .5;
	
	background: linear-gradient(135deg,#390000,#265B00);
	z-index:-1;
	/* margin: 1px; */
}

.videoShorcutBack{
	position:absolute;
	top:0px; left:0px;
	width:100%; height:100%;

	background-size:cover;
	background-position:center;
	z-index:-2;
}

/*
	=============================================================================
	VIDEO PLAYER
*/
.videoPlayer{
	position:fixed; top:0px; left:0px;
	width:100%; height:100%;
	z-index:5000;
	background-color:#000;

	transition:all 1s;
}
.videoPlayer video{
	width:100%; height:100%;
}
.videoPlayerClose{
	position:absolute;
	top:5px; right:5px;
	color:#FFF;
	font-size:15px;
	background-color:rgba(255,255,255,.6);
	padding:5px 10px;
	border-radius:9px;
	text-shadow:1px 1px 2px #000;
	z-index:6000;
	cursor:hand; cursor:pointer;
	opacity: 0;
	transition: all .5s;
}

/*
	==============================================================================
	LOADER
*/
.videoLoader{
	position: fixed;
	z-index: 6000;
	width: 50px; height: 50px;
	bottom: 15px; right: 15px;
	transition:all 1s;
	background-image: url('acoLoader.gif');
	background-size: 30px;
	background-repeat:no-repeat;
	background-position: center;

	background-color:rgba(255,255,255,1);
	border-radius:9px;

	box-shadow:2px 2px 12px rgba(0,0,0,.8);
	
	opacity:.4;
}


/*
	==============================================================================
	VIDEO PREVIEW
*/
.videoPreviewContainer{
	position: relative;
	width: 100%; height: 100%;
}
.videoPreviewContainerDiv{ 
	width: 100%; height: 100%; 
	overflow: hidden;
	border-radius: 9px;
}
